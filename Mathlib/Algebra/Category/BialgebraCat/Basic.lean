  BialgHom.bialgHomClass

instance bialgebraConcreteCategory : ConcreteCategory.{v} (BialgebraCat.{v} R) where
  forget :=
    { obj := fun R => R
      map := fun f => f }
  forget_faithful := ‚ü®fun h => BialgHom.ext (fun x => by
    dsimp at h
