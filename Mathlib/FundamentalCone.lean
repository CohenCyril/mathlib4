  congr 1
  ¬∑ exact Finset.prod_congr rfl (fun w _ ‚Ü¶ by rw [mult, if_pos w.prop, pow_one])
  ¬∑ refine (Fintype.prod_equiv (Equiv.subtypeEquivRight ?_) _ _ (fun w ‚Ü¶ ?_)).symm
    ¬∑ exact fun _ ‚Ü¶ not_isReal_iff_isComplex
