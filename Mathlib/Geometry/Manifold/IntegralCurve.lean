    (Real.ball_eq_Ioo t‚ÇÄ T ‚ñ∏ Metric.mem_ball_self hT) (fun t _ => hip t) hv
    (IsIntegralCurveOn.mono (hŒ≥.isIntegralCurveOn _) (subset_univ _))
    (IsIntegralCurveOn.mono (hŒ≥'.isIntegralCurveOn _) (subset_univ _)) h ht

