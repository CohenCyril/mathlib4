        rw [‚Üê this]
        apply EqOn.union
        ¬∑ have heqon : EqOn Œ≥ (piecewise (Ioo a b) Œ≥ Œ≥') (Ioo (max a a') b) := by
            intros t' ht'
            rw [piecewise, if_pos]
