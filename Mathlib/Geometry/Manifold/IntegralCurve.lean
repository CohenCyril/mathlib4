        ¬∑ have heqon : EqOn Œ≥ (piecewise (Ioo a b) Œ≥ Œ≥') (Ioo a (min b b')) := by
            intros t' ht'
            rw [piecewise, if_pos]
            exact ‚ü®ht'.1, (lt_min_iff.mp ht'.2).1‚ü©
          apply isIntegralCurveOn_Ioo_eqOn_of_contMDiff I t‚ÇÄ _ _ hv
