lemma IsIntegralCurveOn.congr_of_eqOn (hs : IsOpen s) (h : IsIntegralCurveOn Œ≥ v s)
    (hŒ≥ : EqOn Œ≥ Œ≥' s) : IsIntegralCurveOn Œ≥' v s := by
  intros t ht
  rw [‚Üê hŒ≥ ht]
  apply (h t ht).congr_of_eventuallyEq
