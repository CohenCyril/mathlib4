    rw [mem_Ioo, not_and, not_lt] at hmem
    by_cases hlt : a < t
    ¬∑ by_cases hb : t = b
      ¬∑ refine ‚ü®Ioo (max a a') b', Ioo_mem_nhds (max_lt hlt hmem'.1) hmem'.2, ?_‚ü©
        have : Ioo (max a a') b ‚à™ Ico b b' = Ioo (max a a') b' := by
